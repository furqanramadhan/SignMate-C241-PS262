<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.popup.PopupActivity"
    android:padding="16dp"
    android:background="#F5F5F5">


    <ImageView
        android:id="@+id/status_icon"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/checkmark" />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/font_poppinsbold"
        android:text="@string/awesome"
        android:textColor="#000000"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/you_have_8_10_correct_answers"
        android:textSize="18sp"
        android:fontFamily="@font/font_poppins"
        android:textColor="#000000" />


    <TextView
        android:id="@+id/feedback_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/score_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="keep doing practice and good luck"
        android:textSize="16sp"
        android:fontFamily="@font/font_poppins"
        android:textColor="#000000" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/feedback_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/exit_the_quiz"
        android:fontFamily="@font/font_poppins"
        android:backgroundTint="#FFC107"
        android:textColor="#FFFFFF" />
</RelativeLayout>
