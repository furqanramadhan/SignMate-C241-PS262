<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_page"
    tools:context=".ui.play.PlayNowNumber">

    <ImageButton
        android:layout_width="66dp"
        android:layout_height="70dp"
        android:src="@drawable/layer_drawable"
        android:layout_gravity="start"
        android:background="@android:color/transparent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_alphabet"
            android:layout_width="289dp"
            android:layout_height="206dp"
            android:layout_marginTop="180dp"
            android:src="@drawable/ic_hand"/>

        <TextView
            android:id="@+id/tv_quizDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quiz_number"
            android:textSize="22sp"
            android:textColor="@color/blue_dark"
            android:fontFamily="@font/font_poppins"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="25dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_choice_a"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="1"
                android:background="@drawable/custom_button_choice"
                android:layout_marginRight="100dp"
                android:textColor="@color/white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_choice_b"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="2"
                android:background="@drawable/custom_button_choice"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>


