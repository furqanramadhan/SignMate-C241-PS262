<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_page"
    android:padding="20dp"
    tools:context=".ui.quiz.QuizNumberActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Header Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_logo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_title"
                    android:fontFamily="@font/font_poppinsbold"
                    android:textSize="24sp"
                    android:textColor="@color/blue"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end|center_vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_star" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_alphabet"
                android:layout_width="289dp"
                android:layout_height="206dp"
                android:layout_marginTop="180dp"
                android:src="@drawable/ic_hand"/>

            <TextView
                android:id="@+id/tv_quizDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quiz_number"
                android:textSize="22sp"
                android:textColor="@color/blue_dark"
                android:fontFamily="@font/font_poppins"
                android:gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="25dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_choice_a"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="1"
                    android:background="@drawable/custom_button_choice"
                    android:layout_marginEnd="100dp"
                    android:textColor="@color/white"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_choice_b"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="2"
                    android:background="@drawable/custom_button_choice"
                    android:textColor="@color/white"/>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
